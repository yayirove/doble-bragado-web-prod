---
import BaseLayout from "../layouts/BaseLayout.astro";

// SEO por página (se inyecta en BaseLayout)
const pageTitle = "La Doble Bragado 2025 - Carrera de Ciclismo Histórica Argentina";
const pageDescription = "La clásica del oeste bonaerense. 500km de Bragado a Chivilcoy Chacabuco 25 de mayo. La carrera de ciclismo más antigua de Argentina. Inscripciones abiertas 3° femenina. 21 de noviembre 2025.";
const pageKeywords = "la doble bragado 2025, carrera ciclismo argentina, bragado chivilcoy, 200km ciclismo, competencia ciclística, inscripciones ciclismo, oeste bonaerense";
const pageOgImage = "/images/hero-bg.jpg";

// Structured Data (SportsEvent)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "SportsEvent",
  name: "La Doble Bragado 2025",
  description: "Carrera de ciclismo de 500km desde Bragado hasta Chivilcoy, Argentina",
  startDate: "2025-11-21T06:00:00-03:00",
  endDate: "2025-11-21T18:00:00-03:00",
  eventStatus: "https://schema.org/EventScheduled",
  eventAttendanceMode: "https://schema.org/OfflineEventAttendanceMode",
  location: {
    "@type": "Place",
    name: "Bragado, Buenos Aires",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Bragado",
      addressRegion: "Buenos Aires",
      addressCountry: "AR",
    },
  },
  organizer: {
    "@type": "Organization",
    name: "La Doble Bragado",
    url: "https://ladoblebragado.com.ar",
  },
  sport: "Cycling",
  competitor: [
    { "@type": "Person", name: "Nicolás Traico", description: "Campeón masculino 2025" },
    { "@type": "Person", name: "Maribel Aguirre", description: "Campeona femenina 2024" },
  ],
};
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage={pageOgImage}
  structuredData={structuredData}
>
  <main role="main">
    <!-- HERO -->
    <section id="inicio" class="h-screen flex items-center justify-center relative text-center" aria-labelledby="hero-title">
      <img src="/images/hero-bg.jpg" alt="" fetchpriority="high" decoding="async" class="absolute inset-0 w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/50" aria-hidden="true"></div>

      <div class="text-white z-10 max-w-4xl px-6">
        <h1 id="hero-title" class="font-display font-black text-6xl md:text-7xl lg:text-8xl mb-6 leading-tight text-amarillo">
          LA DOBLE<br />BRAGADO
        </h1>
        <p class="text-xl md:text-3xl mb-8 opacity-90 font-semibold max-w-4xl mx-auto">
          La clásica del oeste bonaerense
        </p>
      </div>
    </section>

    <!-- CAMPEONES -->
    <section id="campeones" class="bg-grisclaro py-16" aria-labelledby="campeones-title">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-12">
          <h2 id="campeones-title" class="font-display font-black text-3xl md:text-5xl text-oscuro mb-2 uppercase">
            Campeones Actuales
          </h2>
          <p class="text-base md:text-lg text-celeste font-semibold">Ya son parte de la historia</p>
        </header>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 items-start justify-items-center">
          <!-- Texto 2024 -->
          <div class="w-full max-w-[14rem] text-right">
            <div class="font-sans font-black text-4xl text-celeste mb-2">2024</div>
            <h3 class="text-xl font-bold text-oscuro mb-2">Maribel Aguirre</h3>
            <div class="text-xs text-oscuro/60 font-semibold uppercase tracking-wider">
              Ganadora<br />2° edición Femenina
            </div>
          </div>

          <!-- Foto 2024 -->
          <figure class="w-full max-w-[240px] rounded-3xl overflow-hidden shadow-2xl border-4 border-amarillo transition-transform duration-300 hover:-translate-y-3 motion-reduce:transition-none motion-reduce:transform-none">
            <div class="aspect-[2/3]">
              <img
                src="/winners/maribel-aguirre.jpg"
                alt="Maribel Aguirre, campeona femenina 2024 de La Doble Bragado"
                loading="lazy"
                decoding="async"
                class="w-full h-full object-cover"
              />
            </div>
            <figcaption class="sr-only">Retrato de Maribel Aguirre (2024)</figcaption>
          </figure>

          <!-- Foto 2025 -->
          <figure class="w-full max-w-[240px] rounded-3xl overflow-hidden shadow-2xl border-4 border-amarillo transition-transform duration-300 hover:-translate-y-3 motion-reduce:transition-none motion-reduce:transform-none">
            <div class="aspect-[2/3]">
              <img
                src="/winners/nicolas-traico.jpg"
                alt="Nicolás Traico, campeón masculino 2025 de La Doble Bragado"
                loading="lazy"
                decoding="async"
                class="w-full h-full object-cover"
              />
            </div>
            <figcaption class="sr-only">Retrato de Nicolás Traico (2025)</figcaption>
          </figure>

          <!-- Texto 2025 -->
          <div class="w-full max-w-[14rem] text-left">
            <div class="font-sans font-black text-4xl text-celeste mb-2">2025</div>
            <h3 class="text-xl font-bold text-oscuro mb-2">Nicolás Traico</h3>
            <div class="text-xs text-oscuro/60 font-semibold uppercase tracking-wider">
              Ganador<br />88° edición Masculina
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- COUNTDOWN -->
    <section id="countdown" class="py-16 relative flex items-center justify-center" aria-labelledby="countdown-title">
      <img src="/images/img-countdown.jpg" alt="" loading="lazy" decoding="async" class="absolute inset-0 w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/60" aria-hidden="true"></div>

      <div class="max-w-7xl mx-auto px-6 relative z-10 text-center">
        <header class="mb-10">
          <h2 id="countdown-title" class="font-display font-black text-4xl md:text-5xl text-white mb-2 uppercase">Próximo evento</h2>
          <p class="text-2xl md:text-3xl lg:text-3xl leading-tight text-amarillo font-semibold drop-shadow-[0_0_8px_rgba(247,226,0,0.55)] md:drop-shadow-[0_0_12px_rgba(247,226,0,0.65)]">
            <time datetime="2025-12-12">12 de Diciembre 2025</time> - 3° edición femenina
          </p>
        </header>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto" role="timer" aria-label="Cuenta regresiva para La Doble Bragado 2025">
          <div class="bg-gradient-to-br from-violetaOscuro to-rosa p-6 sm:p-8 rounded-3xl text-center text-white">
            <span id="days" class="font-clock font-black text-4xl md:text-5xl block mb-1" aria-live="polite">--</span>
            <span class="font-bold uppercase tracking-wider text-xs md:text-sm">Días</span>
          </div>
          <div class="bg-gradient-to-br from-violetaOscuro to-rosa p-6 sm:p-8 rounded-3xl text-center text-white">
            <span id="hours" class="font-clock font-black text-4xl md:text-5xl block mb-1" aria-live="polite">--</span>
            <span class="font-bold uppercase tracking-wider text-xs md:text-sm">Horas</span>
          </div>
          <div class="bg-gradient-to-br from-violetaOscuro to-rosa p-6 sm:p-8 rounded-3xl text-center text-white">
            <span id="minutes" class="font-clock font-black text-4xl md:text-5xl block mb-1" aria-live="polite">--</span>
            <span class="font-bold uppercase tracking-wider text-xs md:text-sm">Minutos</span>
          </div>
          <div class="bg-gradient-to-br from-violetaOscuro to-rosa p-6 sm:p-8 rounded-3xl text-center text-white">
            <span id="seconds" class="font-clock font-black text-4xl md:text-5xl block mb-1" aria-live="polite">--</span>
            <span class="font-bold uppercase tracking-wider text-xs md:text-sm">Segundos</span>
          </div>
        </div>
      </div>
    </section>

    <!-- VIDEOS -->
    <section id="videos" class="bg-white py-16" aria-labelledby="videos-title">
      <div class="max-w-7xl mx-auto px-6">
        <header class="text-center mb-12">
          <h2 id="videos-title" class="font-display font-black text-3xl md:text-5xl text-oscuro mb-3 uppercase">
            Reviví la Épica
          </h2>
        <p class="text-base md:text-lg text-celeste font-semibold mb-6">
            Los momentos más intensos de La Doble
          </p>
          <div class="flex items-center justify-center">
            <a
              href="https://youtube.com/@ladoblebragado?si=XEhc375650BaR5al"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-full bg-oscuro text-white px-5 py-2 text-sm font-semibold
                     border border-amarillo/40 hover:translate-y-[-1px] hover:shadow-lg hover:shadow-violeta/20
                     transition-all duration-300 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-celeste/60"
            >
              Ver canal en YouTube
              <span aria-hidden="true">↗</span>
            </a>
          </div>
        </header>

        <ul role="list" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Card 1 · Etapa 1 -->
          <li class="group">
            <button
              type="button"
              data-ytid="_sI7tTt_PvM"
              class="relative block w-full rounded-3xl overflow-hidden aspect-[16/9]
                     will-change-transform transition-transform duration-300 group-hover:scale-[1.02]
                     focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-celeste/60"
              aria-labelledby="video-et1-title"
            >
              <img
                src="/images/VIDEOS/thumnail_etapa_1_resumen.png"
                alt="Thumbnail de la Etapa 1 de La Doble Bragado"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy" decoding="async"
              />
              <div class="absolute inset-0 bg-black/35 group-hover:bg-black/25 transition-colors"></div>

              <!-- Play abajo-derecha -->
              <span class="sr-only">Reproducir video</span>
              <div class="absolute right-3 bottom-3 md:right-4 md:bottom-4">
                <div
                  class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-white/85 text-oscuro/90 shadow-sm
                         flex items-center justify-center transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5
                         motion-reduce:transition-none"
                  aria-hidden="true"
                >
                  <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" class="opacity-90">
                    <path d="M8 5v14l11-7-11-7z"></path>
                  </svg>
                </div>
              </div>
            </button>
            <div class="mt-3">
              <h3 id="video-et1-title" class="text-oscuro text-lg font-bold">Etapa 1: Cobarrubia manda</h3>
              <p class="text-sm text-[#333333]">108 km a puro ritmo y sprint al límite — mirá el resumen.</p>
            </div>
          </li>

          <!-- Card 2 · Etapa 2 -->
          <li class="group">
            <button
              type="button"
              data-ytid="slimSKZBFEs"
              class="relative block w-full rounded-3xl overflow-hidden aspect-[16/9]
                     will-change-transform transition-transform duration-300 group-hover:scale-[1.02]
                     focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-celeste/60"
              aria-labelledby="video-et2-title"
            >
              <img
                src="/images/VIDEOS/thumnail_etapa_2_resumen.png"
                alt="Thumbnail de la Etapa 2 de La Doble Bragado"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy" decoding="async"
              />
              <div class="absolute inset-0 bg-black/35 group-hover:bg-black/25 transition-colors"></div>

              <span class="sr-only">Reproducir video</span>
              <div class="absolute right-3 bottom-3 md:right-4 md:bottom-4">
                <div
                  class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-white/85 text-oscuro/90 shadow-sm
                         flex items-center justify-center transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5
                         motion-reduce:transition-none"
                  aria-hidden="true"
                >
                  <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" class="opacity-90">
                    <path d="M8 5v14l11-7-11-7z"></path>
                  </svg>
                </div>
              </div>
            </button>
            <div class="mt-3">
              <h3 id="video-et2-title" class="text-oscuro text-lg font-bold">Etapa 2: Correa domina</h3>
              <p class="text-sm text-[#333333]">160 km con viento cruzado y final a pura potencia — dale play.</p>
            </div>
          </li>

          <!-- Card 3 · Final -->
          <li class="group">
            <button
              type="button"
              data-ytid="_g-xr9Tfbxs"
              class="relative block w-full rounded-3xl overflow-hidden aspect-[16/9]
                     will-change-transform transition-transform duration-300 group-hover:scale-[1.02]
                     focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-celeste/60"
              aria-labelledby="video-et5-title"
            >
              <img
                src="/images/VIDEOS/thumnail_etapa_5_resume.jpg"
                alt="Thumbnail de la Final (Etapa 5) de La Doble Bragado"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy" decoding="async"
              />
              <div class="absolute inset-0 bg-black/35 group-hover:bg-black/25 transition-colors"></div>

              <span class="sr-only">Reproducir video</span>
              <div class="absolute right-3 bottom-3 md:right-4 md:bottom-4">
                <div
                  class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-white/85 text-oscuro/90 shadow-sm
                         flex items-center justify-center transition-transform duración-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5
                         motion-reduce:transition-none"
                  aria-hidden="true"
                >
                  <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" class="opacity-90">
                    <path d="M8 5v14l11-7-11-7z"></path>
                  </svg>
                </div>
              </div>
            </button>
            <div class="mt-3">
              <h3 id="video-et5-title" class="text-oscuro text-lg font-bold">Final: Cobarrubia gana, Traico campeón</h3>
              <p class="text-sm text-[#333333]">30 vueltas en Bragado, ataques y coronación — reviví el cierre.</p>
            </div>
          </li>
        </ul>
      </div>
    </section>

    <!-- SPONSORS + CONTACTO -->
    <section id="sponsors"
      class="relative py-20 text-white bg-gradient-to-br from-violeta to-celeste
      before:content-[''] before:absolute before:inset-x-0 before:top-0 before:h-1 before:bg-rosa
      after:content-[''] after:absolute after:inset-x-0 after:bottom-0 after:h-0 after:bg-amarillo overflow-hidden"
      aria-labelledby="sponsors-title">

      <div class="absolute top-0 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-rosa to-transparent"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-white/5 via-transparent to-rosa/10 pointer-events-none"></div>
      <div class="absolute top-0 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-rosa/60 to-transparent"></div>

      <div class="relative z-10 max-w-7xl mx-auto px-6">
        <header class="text-center mb-12">
          <h2 id="sponsors-title"
              class="font-display font-black text-3xl md:text-4xl lg:text-4xl uppercase relative">
            Sponsors que nos acompañan
            <span class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-rosa via-amarillo to-rosa rounded-full"></span>
          </h2>
        </header>

        <!-- Tiers -->
        <div class="mb-16">
          <!-- <h3 class="text-center text-amarillo font-bold text-xl mb-8 uppercase tracking-wider">Estática y en Youtube</h3> -->

          <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <!-- Oro -->
            <article class="relative md:col-span-1">
              <div class="relative bg-gradient-to-br from-white via-white/98 to-white/95 backdrop-blur-sm text-oscuro p-6 rounded-3xl text-center shadow-2xl shadow-violeta/30 border border-amarillo/30">
                <!-- <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-amarillo via-yellow-400 to-amarillo px-4 py-1 rounded-full shadow-lg">
                  <span class="text-oscuro text-sm font-bold uppercase tracking-wider">Oro</span>
                </div> -->
                <div class="relative w-full h-24 md:h-32 bg-gradient-to-br from-gray-50 to-white rounded-2xl overflow-hidden border border-gray-200/50">
                  <img src="/images/sponsors/oro-chivilcoy.svg" alt="Sponsor Oro - Chivilcoy" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                </div>
              </div>
            </article>

            <!-- Plata -->
            <article class="relative md:col-span-1">
              <div class="relative bg-gradient-to-br from-white via-white/98 to-white/95 backdrop-blur-sm text-oscuro p-6 rounded-3xl text-center shadow-2xl shadow-violeta/30 border border-gray-300/40">
                <!-- <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-gray-400 via-gray-300 to-gray-400 px-4 py-1 rounded-full shadow-lg">
                  <span class="text-oscuro text-sm font-bold uppercase tracking-wider">Plata</span>
                </div> -->
                <div class="relative w-full h-24 md:h-32 bg-gradient-to-br from-gray-50 to-white rounded-2xl overflow-hidden border border-gray-200/50">
                  <img src="/images/sponsors/plata-pardo.svg" alt="Sponsor Plata - Pardo" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                </div>
              </div>
            </article>

            <!-- Bronce -->
            <article class="relative md:col-span-1">
              <div class="relative bg-gradient-to-br from-white via-white/98 to-white/95 backdrop-blur-sm text-oscuro p-6 rounded-3xl text-center shadow-2xl shadow-violeta/30 border border-orange-400/40">
                <!-- <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-gradient-to-r from-orange-500 via-orange-400 to-orange-500 px-4 py-1 rounded-full shadow-lg">
                  <span class="text-white text-sm font-bold uppercase tracking-wider">Bronce</span>
                </div> -->
                <div class="relative w-full h-24 md:h-32 bg-gradient-to-br from-gray-50 to-white rounded-2xl overflow-hidden border border-gray-200/50">
                  <img src="/images/sponsors/bronce-osx.svg" alt="Sponsor Bronce - OSX" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                </div>
              </div>
            </article>
          </div>
        </div>

        <!-- Colaboradores -->
        <div class="mb-16">
          <!-- <h3 class="text-center text-amarillo font-bold text-xl mb-8 uppercase tracking-wider">Colaboradores</h3> -->
          <div class="max-w-6xl mx-auto">
            <div class="bg-white/10 backdrop-blur-sm border border-white/20 shadow-xl shadow-violeta/20 rounded-3xl p-6">
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-lg border border-white/30">
                  <div class="relative h-16 bg-gradient-to-br from-gray-50 to-white rounded-xl flex items-center justify-center overflow-hidden border border-gray-100/50">
                    <img src="/images/sponsors/1-bragado.svg" alt="Bragado" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                  </div>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-lg border border-white/30">
                  <div class="relative h-16 bg-gradient-to-br from-gray-50 to-white rounded-xl flex items-center justify-center overflow-hidden border border-gray-100/50">
                    <img src="/images/sponsors/2-wahoo.svg" alt="Wahoo" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                  </div>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-lg border border-white/30">
                  <div class="relative h-16 bg-gradient-to-br from-gray-50 to-white rounded-xl flex items-center justify-center overflow-hidden border border-gray-100/50">
                    <img src="/images/sponsors/3-raleigh.svg" alt="Raleigh" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                  </div>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-lg border border-white/30">
                  <div class="relative h-16 bg-gradient-to-br from-gray-50 to-white rounded-xl flex items-center justify-center overflow-hidden border border-gray-100/50">
                    <img src="/images/sponsors/4-ktm.svg" alt="KTM" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                  </div>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-lg border border-white/30">
                  <div class="relative h-16 bg-gradient-to-br from-gray-50 to-white rounded-xl flex items-center justify-center overflow-hidden border border-gray-100/50">
                    <img src="/images/sponsors/5-magene.svg" alt="Magene" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                  </div>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-lg border border-white/30">
                  <div class="relative h-16 bg-gradient-to-br from-gray-50 to-white rounded-xl flex items-center justify-center overflow-hidden border border-gray-100/50">
                    <img src="/images/sponsors/6-colla.svg" alt="Colla" class="absolute inset-0 w-full h-full object-contain" loading="lazy" decoding="async"/>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Ancla para /#contacto -->
        <span id="contacto" class="block -mt-16 pt-16" aria-hidden="true"></span>

        <!-- Formulario -->
        <div class="relative group max-w-3xl mx-auto">
          <div class="absolute inset-0 bg-gradient-to-r from-rosa/20 via-amarillo/20 to-rosa/20 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-all duration-700 scale-110"></div>
          <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-32 h-0.5 bg-gradient-to-r from-transparent via-rosa/60 to-transparent"></div>

          <form name="sponsor-contact" method="POST" data-netlify="true" netlify-honeypot="bot-field"
                class="relative card bg-white/95 backdrop-blur-sm text-oscuro border border-white/30 shadow-2xl shadow-violeta/30 transition-all duración-500 group-hover:shadow-3xl group-hover:shadow-amarillo/20 group-hover:border-amarillo/40">
            <input type="hidden" name="form-name" value="sponsor-contact" />
            <p class="hidden"><label>Si sos humano no completes: <input name="bot-field" /></label></p>

            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-violeta mb-2">Activá tu marca en nuestro canal de YouTube</h3>
              <div class="w-16 h-1 bg-gradient-to-r from-rosa to-amarillo rounded-full mx-auto"></div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div class="relative group/field">
                <label for="nombre" class="block font-semibold mb-3 text-violeta transition-colors duration-300 group-focus-within/field:text-amarillo">
                  Nombre Completo *
                </label>
